{
  "name": "touitomamout-next",
  "version": "2.0.0",
  "description": "An easy way to synchronize your posts from X.com to other social media.",
  "scripts": {
    "format": "prettier --write .",
    "build": "bun run build:all",
    "build:all": "mkdir -p dist && bun run build:linux-x64 && bun run build:linux-x64-musl && bun run build:linux-arm64-musl && bun run build:windows-x64 && bun run build:macos-x64 && bun run build:macos-arm64",
    "build:linux-x64": "bun build ./src/index.ts --compile --target=bun-linux-x64 --outfile dist/touitomamout-linux-x64",
    "build:linux-x64-musl": "bun build ./src/index.ts --compile --target=bun-linux-x64-musl --outfile dist/touitomamout-linux-x64-musl",
    "build:linux-arm64-musl": "bun build ./src/index.ts --compile --target=bun-linux-arm64-musl --outfile dist/touitomamout-linux-arm64-musl",
    "build:windows-x64": "bun build ./src/index.ts --compile --target=bun-windows-x64 --outfile dist/touitomamout-windows-x64.exe",
    "build:macos-x64": "bun build ./src/index.ts --compile --target=bun-darwin-x64 --outfile dist/touitomamout-macos-x64",
    "build:macos-arm64": "bun build ./src/index.ts --compile --target=bun-darwin-arm64 --outfile dist/touitomamout-macos-arm64",
    "dev": "bun run src/index.ts",
    "check": "bun tsc --noEmit",
    "gen:migration": "bun run src/db/generate.ts"
  },
  "type": "module",
  "author": "Yamada Sexta",
  "homepage": "https://github.com/yamada-sexta/touitomamout-next",
  "license": "AGPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "https://github.com/yamada-sexta/touitomamout-next.git"
  },
  "dependencies": {
    "@atproto/api": "^0.18.21",
    "@mailbutler/eldr": "^1.3.1",
    "@silvia-odwyer/photon-node": "^0.3.4",
    "@the-convocation/twitter-scraper": "^0.21.1",
    "cli-spinners": "^3.4.0",
    "cron": "^4.4.0",
    "cycletls": "^2.0.5",
    "discord-api-types": "^0.38.38",
    "drizzle-orm": "^0.45.1",
    "html-entities": "^2.6.0",
    "masto": "^7.10.1",
    "misskey-js": "^2026.1.0-beta.0",
    "ora": "^9.3.0",
    "tough-cookie": "^6.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/bun": "^1.3.9",
    "drizzle-kit": "0.31.9",
    "prettier": "3.8.1",
    "typescript": "^5.9.3"
  },
  "module": "src/index.ts",
  "private": true
}
